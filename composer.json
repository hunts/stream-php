{
    "name": "Stream.php",
    "description": "PHP implementation of API style like Java Stream API and .NET Linq",
    "keywords": ["streaming api", "php", "stream", "linq"],
    "type": "library",
    "license": "MIT",
    "author": [
        {
            "name": "Hunts",
            "email": "hunts.c@gmail.com",
            "homepage": "http://idf.tf"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.0.*",
        "satooshi/php-coveralls": "dev-master",
        "jakub-onderka/php-parallel-lint": "0.9"
    },
    "autoload": {
        "psr-4": {
            "Stream\\": "src/Stream"
        },
        "files": [
            "src/index.php"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Stream\\": "tests/Stream" }
    },
    "scripts": {
        "test": [
            "parallel-lint . --exclude vendor",
            "phpunit --coverage-clover build/logs/clover.xml"
        ]
    }
}

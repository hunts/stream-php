{
  "name": "hunts/stream.php",
  "description": "PHP implementation of collection query API similar to Java Stream API and .NET Linq",
  "keywords": [
    "stream api",
    "stream.php",
    "php",
    "linq"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Minghang Chen",
      "email": "chen@minghang.dev",
      "homepage": "https://minghang.dev",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "jakub-onderka/php-parallel-lint": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Hunts\\Stream\\": "src/Stream"
    },
    "files": [
      "src/index.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Hunts\\Stream\\": "tests/Stream"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
